package components

templ TitleCSS() {
	<style>
        .title-main {
            color: var(--color-white);
            font-size: 70px;
            font-weight: 700;
            margin-bottom: 12px;
            margin-top: 0;
        }
    </style>
}

templ Title(title string) {
	@TitleCSS()
	<h1 class="title-main">{ title }</h1>
}
